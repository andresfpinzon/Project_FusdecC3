<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1">

        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre Colegio"
                    android:padding="8dp"/>
            <EditText
                    android:id="@+id/nombreColegioEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Nombre Colegio"
                    android:layout_weight="1"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email Colegio"
                    android:padding="8dp"/>
            <EditText
                    android:id="@+id/emailColegioEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Email Colegio"
                    android:layout_weight="1"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estudiantes"
                    android:padding="8dp"/>
            <EditText
                    android:id="@+id/estudiantesEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Estudiantes (separados por comas)"
                    android:layout_weight="1"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección Colegio"
                    android:padding="8dp"/>
            <EditText
                    android:id="@+id/direccionColegioEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Dirección Colegio"
                    android:layout_weight="1"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:padding="8dp"/>
            <Switch
                    android:id="@+id/estadoColegioSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Activo"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <Button
                    android:id="@+id/confirmarButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Confirmar"
                    android:layout_weight="1"
                    android:padding="8dp"/>
            <Button
                    android:id="@+id/cancelarButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:layout_weight="1"
                    android:padding="8dp"/>
        </TableRow>

        <TableRow>
            <androidx.appcompat.widget.SearchView
                    android:id="@+id/searchViewColegio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:queryHint="Buscar Colegio"
                    android:padding="8dp"/>
        </TableRow>
    </TableLayout>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/colegiosRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="8dp"/>
</LinearLayout>