<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <TextView
            android:id="@+id/unidadTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Módulo Unidad"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
            android:id="@+id/nombreUnidadEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre de la unidad"
            app:layout_constraintTop_toBottomOf="@id/unidadTextView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>

    <EditText
            android:id="@+id/ubicacionUnidadEditText"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:hint="Ubicación de la unidad"
            tools:layout_editor_absoluteY="109dp" tools:layout_editor_absoluteX="1dp"
            tools:ignore="MissingConstraints"/>
    <EditText
            android:id="@+id/brigadaIdEditText"
            android:layout_width="379dp"
            android:layout_height="wrap_content"
            android:hint="ID de la brigada"
            app:layout_constraintTop_toBottomOf="@id/ubicacionUnidadEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"/>


    <Button
            android:id="@+id/confirmarButton"
            android:layout_width="178dp"
            android:layout_height="70dp"
            android:text="Confirmar"
            app:layout_constraintTop_toBottomOf="@id/brigadaIdEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:id="@+id/cancelarButton"
            android:layout_width="177dp"
            android:layout_height="69dp"
            android:text="Cancelar"
            app:layout_constraintTop_toBottomOf="@id/brigadaIdEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintHorizontal_bias="0.0"/>
    <ListView
            android:layout_width="409dp"
            android:layout_height="420dp" tools:layout_editor_absoluteY="295dp" tools:layout_editor_absoluteX="1dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>