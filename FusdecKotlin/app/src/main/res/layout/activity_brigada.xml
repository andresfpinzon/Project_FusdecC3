<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
>
    <TextView
            android:id="@+id/tituloTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brigada"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="105dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
    />
    <EditText
            android:id="@+id/nombreBrigadaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ingrese nombre de Brigada"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/tituloTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="#ee00ef"
            android:scrollHorizontally="true"
    />

    <EditText
            android:id="@+id/ubicacionBrigadaEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="UbicaciÃ³n de la Brigada"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/nombreBrigadaEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="#ee00ef"
            android:scrollHorizontally="true"
    />


    <EditText
            android:id="@+id/comandoIdEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="ID del Comando"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/ubicacionBrigadaEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="#ee00ef"
            android:scrollHorizontally="true"
    />


    <EditText
            android:id="@+id/unidadesEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Unidades (separadas por comas)"
            android:inputType="text"
            app:layout_constraintTop_toBottomOf="@id/comandoIdEditText"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp"
            android:layout_marginStart="40dp"
            android:textSize="14sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:textColorHighlight="#ee00ef"
            android:scrollHorizontally="true"
    />





        <Button
                android:id="@+id/confirmarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirmar"
                app:layout_constraintTop_toBottomOf="@id/unidadesEditText"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="40dp"

        />

        <Button
                android:id="@+id/cancelarButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancelar"
                app:layout_constraintTop_toBottomOf="@id/unidadesEditText"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="40dp"

        />




    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/brigadasRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/confirmarButton"
            app:layout_constraintStart_toStartOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>
