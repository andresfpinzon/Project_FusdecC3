<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

    <EditText
            android:id="@+id/nombreBrigadaEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Nombre Brigada"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <EditText
            android:id="@+id/ubicacionBrigadaEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="UbicaciÃ³n Brigada"
            app:layout_constraintTop_toBottomOf="@id/nombreBrigadaEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <EditText
            android:id="@+id/comandoIdEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Comando ID"
            app:layout_constraintTop_toBottomOf="@id/ubicacionBrigadaEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <EditText
            android:id="@+id/unidadesEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Unidades (separadas por comas)"
            app:layout_constraintTop_toBottomOf="@id/comandoIdEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/confirmarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Confirmar"
            app:layout_constraintTop_toBottomOf="@id/unidadesEditText"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <Button
            android:id="@+id/cancelarButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Cancelar"
            app:layout_constraintTop_toBottomOf="@id/confirmarButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cancelarButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp"/>

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/brigadasRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/searchView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>