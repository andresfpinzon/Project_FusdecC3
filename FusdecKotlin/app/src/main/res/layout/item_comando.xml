<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">

    <TextView
            android:id="@+id/textIdComando"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID del Comando"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="ID: COM01"/>

    <TextView
            android:id="@+id/textNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del Comando"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textIdComando"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="Nombre: Comando 1"/>

    <TextView
            android:id="@+id/textUbicacion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Ubicación del Comando"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textNombre"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="Ubicación: Ubicación 1"/>

    <TextView
            android:id="@+id/textEstado"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Estado del Comando"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textUbicacion"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="Estado: Activo"/>

    <TextView
            android:id="@+id/textFundacionId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="ID de la Fundación"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textEstado"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="Fundación: FUND01"/>

    <TextView
            android:id="@+id/textBrigadas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Brigadas"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textFundacionId"
            app:layout_constraintEnd_toStartOf="@+id/updateButton"
            app:layout_constraintHorizontal_bias="0"
            android:layout_marginEnd="8dp"
            tools:text="Brigadas: BRIG01, BRIG02"/>

    <ImageButton
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Editar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

    <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Eliminar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/updateButton"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>