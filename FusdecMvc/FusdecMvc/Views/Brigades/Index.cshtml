@model IEnumerable<FusdecMvc.Models.Brigade>

@{
    ViewData["Title"] = "Brigadas";
}

<h1>Brigadas</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i>&nbsp;Agregar Brigada</a>
</p>
<table id="brigadasTabla" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Nombre de la brigada</th>
            <th>Lugar</th>
            <th>Estado</th>
            <th>Comando</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.BrigadeName)</td>
                <td>@Html.DisplayFor(modelItem => item.BrigadeLocation)</td>
                <td>@Html.DisplayFor(modelItem => item.BrigadeStatus)</td>
                <td>@Html.DisplayFor(modelItem => item.Command.IdCommand)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdBrigade" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.IdBrigade" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Detalles</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdBrigade" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Borrar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#brigadasTabla').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
}