@model FusdecMvc.Models.Brigade

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Brigada</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BrigadeName" class="control-label">Nombre</label>
                <input asp-for="BrigadeName" class="form-control" />
                <span asp-validation-for="BrigadeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BrigadeLocation" class="control-label">Lugar</label>
                <input asp-for="BrigadeLocation" class="form-control" />
                <span asp-validation-for="BrigadeLocation" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">Estado
                    <input class="form-check-input" asp-for="BrigadeStatus" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="IdCommand" class="control-label">Idcomando</label>
                <select asp-for="IdCommand" class="form-control" asp-items="ViewBag.IdCommand"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atrás</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}