@model FusdecMvc.Models.Attendance

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Asistencia</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="AttendanceTitle" class="control-label">Titulo</label>
                <input asp-for="AttendanceTitle" class="form-control" />
                <span asp-validation-for="AttendanceTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendanceDate" class="control-label">Fecha</label>
                <input asp-for="AttendanceDate" class="form-control" type="date"/>
                <span asp-validation-for="AttendanceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AttendanceStatus" class="form-label">Asistencia</label>
                <select class="form-control" asp-for="AttendanceStatus" required>
                    <option value="true">Asistio</option>
                    <option value="false">No asistio</option>
                </select>
            </div>
            <h4>Seleccionar Studiante(s)</h4>
            <table id="dataTable" class="table">
                <thead>
                    <tr>
                        <th>Seleccionar</th>
                        <th>Nombres</th>
                        <th>Apellidos</th>
                        <th>Documento</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var student in ViewBag.Students)
                    {
                        <tr>
                            <td>
                                <input type="checkbox" name="selectedAutores" value="@student.IdStudent" />
                            </td>
                            <td>@student.StudentName</td>
                            <td>@student.StudentLastName</td>
                            <td>@student.DocumentNumber</td>
                        </tr>
                    }
                </tbody>
            </table>
            <div class="form-group mt-3">
                <input type="submit" value="&#43; Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable({
                "language": {
                    "lengthMenu": "Mostrar _MENU_ entradas por página",
                    "zeroRecords": "No se encontraron resultados",
                    "info": "Mostrando _START_ a _END_ de _TOTAL_ entradas",
                    "infoEmpty": "Mostrando 0 a 0 de 0 entradas",
                    "infoFiltered": "(filtrado de _MAX_ entradas totales)",
                    "search": "Buscar:",
                    "paginate": {
                        "first": "Primero",
                        "last": "Último",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
