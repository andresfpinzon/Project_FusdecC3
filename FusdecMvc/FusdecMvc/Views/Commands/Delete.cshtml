@model FusdecMvc.Models.Command

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        <h3>¿Estás seguro de que quieres eliminar los datos?</h3>
    </div>
    <div class="card-body">
        <h4>Comando</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">
                Nombre
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.CommandName)
            </dd>
            <dt class="col-sm-3">
                Estado
            </dt>
            <dd class="col-sm-9">
                @(Model.CommandStatus ? "Activo" : "Inactivo")
            </dd>
            <dt class="col-sm-3">
                Ubicación
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.UbicacionComando)
            </dd>
            <dt class="col-sm-3">
                Fundación a la que pertenece
            </dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Fundation.FundationName)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCommand" />
            <button type="submit" class="btn btn-danger">
                <i class="fa fa-trash"></i> Borrar
            </button>
            <div>
                <a asp-action="Index" class="btn btn-secondary mt-3">
                    &#8592; Volver atrás
                </a>
            </div>
        </form>
    </div>
</div>