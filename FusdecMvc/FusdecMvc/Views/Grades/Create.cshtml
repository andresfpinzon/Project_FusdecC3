@model FusdecMvc.Models.Grade

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Calificación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdReport" class="control-label">Reporte</label>
                <select asp-for="IdReport" class ="form-control" asp-items="ViewBag.IdReport"></select>
            </div>
            <div class="form-group">
                <label asp-for="Approved" class="form-label">Estado</label>
                <select class="form-control" asp-for="Approved" required>
                    <option value="true">Aprobado</option>
                    <option value="false">No aprobado</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ObservationGrade" class="control-label">Observaciones</label>
                <input asp-for="ObservationGrade" class="form-control" />
                <span asp-validation-for="ObservationGrade" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="&#43; Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
