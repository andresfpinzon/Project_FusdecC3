@model FusdecMvc.Models.Course

@{
    ViewData["Title"] = "Eliminar";
}

<h1>Eliminar</h1>

<h3>¿Estás seguro de que quieres eliminar los datos?</h3>
<div>
    <h4>Curso</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Nombre
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseName)
        </dd>
        <dt class="col-sm-2">
            Descripcion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseDescription)
        </dd>
        <dt class="col-sm-2">
            Intencidad horaria
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseHourlyIntensity)
        </dd>
        <dt class="col-sm-2">
            Estado
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CourseEstatus)
        </dd>
        <dt class="col-sm-2">
            Id de la fundacion
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fundation.IdFundation)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="IdCourse" />
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a asp-action="Index">Volver atrás</a>
    </form>
</div>