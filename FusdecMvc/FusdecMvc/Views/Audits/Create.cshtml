@model FusdecMvc.Models.Edition

@{
    ViewData["Title"] = "Crear Edición";
}

<h1 class="text-center mb-4">Crear Nueva Edición</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" id="editionForm" class="border p-3 rounded shadow-sm">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="EditionStartDate" class="form-label">Fecha de Inicio</label>
                    <input asp-for="EditionStartDate" class="form-control" type="date" />
                    <span asp-validation-for="EditionStartDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="EditionEndDate" class="form-label">Fecha de Finalización</label>
                    <input asp-for="EditionEndDate" class="form-control" type="date" />
                    <span asp-validation-for="EditionEndDate" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="IdCourse" class="form-label">Curso</label>
                    <select asp-for="IdCourse" class="form-control" asp-items="ViewBag.IdCourse"></select>
                    <span asp-validation-for="IdCourse" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="&#43; Crear" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.1/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.19.1/additional-methods.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#editionForm").validate({
                rules: {
                    EditionStartDate: {
                        required: true,
                        date: true
                    },
                    EditionEndDate: {
                        required: true,
                        date: true
                    },
                    IdCourse: {
                        required: true
                    }
                },
                messages: {
                    EditionStartDate: "Por favor, seleccione una fecha de inicio.",
                    EditionEndDate: "Por favor, seleccione una fecha de finalización.",
                    IdCourse: "Por favor, seleccione un curso."
                }
            });
        });
    </script>
}