@model IEnumerable<FusdecMvc.Models.Audit>

@{
    ViewData["Title"] = "Audit Index";
}

<h1>Audit Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> Create New</a>
</p>
<table class="table table-striped table-bordered" id="auditTable">
    <thead>
        <tr>
            <th>
                Fecha de la auditoria
            </th>
            <th>
                Nombre del emisor de la auditoria
            </th>
            <th>
                Certificado
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.AuditDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameOfIssuerAudit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Certificate.IdCertificate)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdAudit" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IdAudit" class="btn btn-info"><i class="fas fa-info-circle"></i> Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IdAudit" class="btn btn-danger"><i class="fas fa-trash-alt"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#auditTable').DataTable();
        });
    </script>
}