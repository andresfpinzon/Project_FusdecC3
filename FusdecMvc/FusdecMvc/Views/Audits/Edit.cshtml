@model FusdecMvc.Models.Audit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Audit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdAudit" />
            <div class="form-group">
                <label asp-for="AuditDate" class="control-label"></label>
                <input asp-for="AuditDate" class="form-control" />
                <span asp-validation-for="AuditDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameOfIssuerAudit" class="control-label"></label>
                <input asp-for="NameOfIssuerAudit" class="form-control" />
                <span asp-validation-for="NameOfIssuerAudit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdCertificate" class="control-label"></label>
                <select asp-for="IdCertificate" class="form-control" asp-items="ViewBag.IdCertificate"></select>
                <span asp-validation-for="IdCertificate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save Changes" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}