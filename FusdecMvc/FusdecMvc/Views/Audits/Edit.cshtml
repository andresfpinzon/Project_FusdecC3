@model FusdecMvc.Models.Audit

@{
    ViewData["Title"] = "Editar Auditoría";
}

<h1 class="text-center mb-4">Editar Auditoría</h1>

<div class="container">
    <h4>Detalles de la Auditoría</h4>
    <hr />
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdAudit" />

                <div class="form-group">
                    <label asp-for="AuditDate" class="control-label"></label>
                    <input asp-for="AuditDate" class="form-control" type="date" />
                    <span asp-validation-for="AuditDate" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="NameOfIssuerAudit" class="control-label"></label>
                    <input asp-for="NameOfIssuerAudit" class="form-control" />
                    <span asp-validation-for="NameOfIssuerAudit" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCertificate" class="control-label"></label>
                    <select asp-for="IdCertificate" class="form-control" asp-items="ViewBag.IdCertificate"></select>
                    <span asp-validation-for="IdCertificate" class="text-danger"></span>
                </div>

                <div class="form-group mt-3">
                    <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-secondary">
            &#8592; Volver atrás
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}