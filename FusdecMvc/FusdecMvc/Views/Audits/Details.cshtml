@model FusdecMvc.Models.Audit

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div class="card">

    <div class="card-header">
        <h4>Auditoria</h4>
    </div>

    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Fecha de <br /> auditoría
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.AuditDate)
            </dd>
            <dt class="col-sm-2">
                Nombre del emisor <br /> del certificado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NameOfIssuerAudit)
            </dd>
            <dt class="col-sm-2">
                Nombres
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Certificate.Student.StudentName)
            </dd>
            <dt class="col-sm-2">
                Apellidos
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Certificate.Student.StudentLastName)
            </dd>
            <dt class="col-sm-2">
                Documento del <br /> titular del certificado
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Certificate.Student.DocumentNumber)
            </dd>
        </dl>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.IdAudit" class="btn btn-warning"><i class="bi bi-info-circle"></i> Editar</a>
        </div>
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-3">
                &#8592; Volver atrás
            </a>
        </div>
    </div>
</div>
