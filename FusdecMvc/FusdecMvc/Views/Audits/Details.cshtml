@model FusdecMvc.Models.Audit

@{
    ViewData["Title"] = "Detalles de la Auditoría";
}

<h1 class="text-center mb-4">Detalles de la Auditoría</h1>

<div class="container">
    <h4>Auditoría</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AuditDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AuditDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NameOfIssuerAudit)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NameOfIssuerAudit)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Certificate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Certificate.IdCertificate)
        </dd>
    </dl>

    <div>
        <a asp-action="Edit" asp-route-id="@Model?.IdAudit" class="btn btn-warning"><i class="bi bi-info-circle"></i> Editar</a>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-secondary mt-3">
            &#8592; Volver atrás
        </a>
    </div>
</div>