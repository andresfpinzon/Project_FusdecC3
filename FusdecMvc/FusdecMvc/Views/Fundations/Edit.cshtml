@model FusdecMvc.Models.Fundation

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Fundación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdFundation" />
            <div class="form-group">
                <label asp-for="FundationName" class="control-label">Nombre</label>
                <input asp-for="FundationName" class="form-control" />
                <span asp-validation-for="FundationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}