@model FusdecMvc.Models.Fundation

@{
    ViewData["Title"] = "Crear";
}

<h1>Crear</h1>

<h4>Fundación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FundationName" class="control-label"></label>
                <input asp-for="FundationName" class="form-control" />
                <span asp-validation-for="FundationName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver atrás</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}