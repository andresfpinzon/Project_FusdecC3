@model FusdecMvc.Models.Certificate

@{
    ViewData["Title"] = "Edit Certificate";
}

<h1>Edit Certificate</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit" class="needs-validation" novalidate>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCertificate" />

            <div class="form-group">
                <label asp-for="VerificationCode" class="control-label"></label>
                <input asp-for="VerificationCode" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor, ingrese el código de verificación.
                </div>
            </div>

            <div class="form-group">
                <label asp-for="NameOfIssuerCert" class="control-label"></label>
                <input asp-for="NameOfIssuerCert" class="form-control" required>
                <div class="invalid-feedback">
                    Por favor, ingrese el nombre del emisor del certificado.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="CertificateStatus" class="form-label">Estado</label>
                <select class="form-control" asp-for="CertificateStatus" required>
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="IdCertificate" class="control-label">Curso</label>
                <select asp-for="IdCertificate" class="form-control" asp-items="ViewBag.IdCertificate" required>
                    <option value="">Seleccione un Curso</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, seleccione un curso.
                </div>
            </div>
            <div class="form-group">
                <label asp-for="IdStudent" class="control-label">Estudiante</label>
                <select asp-for="IdStudent" class="form-control" asp-items="ViewBag.IdStudent" required>
                    <option value="">Seleccione un Estudiante</option>
                </select>
                <div class="invalid-feedback">
                    Por favor, seleccione un Estudiante.
                </div>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}