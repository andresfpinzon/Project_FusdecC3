@model FusdecMvc.Models.Certificate

@{
    ViewData["Title"] = "Create Certificate";
}

<h1>Create Certificate</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentName" class="control-label">Nombres</label>
                <input asp-for="StudentName" class="form-control" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentLastName" class="control-label">Apellidos</label>
                <input asp-for="StudentLastName" class="form-control" />
                <span asp-validation-for="StudentLastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VerificationCode" class="control-label">Codigo De Verificacion</label>
                <input asp-for="VerificationCode" class="form-control" />
                <span asp-validation-for="VerificationCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameOfIssuerCert" class="control-label">Nombre del Emisor </label>
                <input asp-for="NameOfIssuerCert" class="form-control" />
                <span asp-validation-for="NameOfIssuerCert" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserDocumentNumber" class="control-label">Numero De Documento</label>
                <input asp-for="UserDocumentNumber" class="form-control" />
                <span asp-validation-for="UserDocumentNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">Estado
                    <input class="form-check-input" asp-for="CertificateStatus" />
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CourseName" class="control-label">Nombre del curso</label>
                <input asp-for="CourseName" class="form-control" />
                <span asp-validationfor="CourseName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}