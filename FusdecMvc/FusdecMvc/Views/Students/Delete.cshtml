@model FusdecMvc.Models.Student

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de que quieres eliminar los datos?</h3>
<div>
    <h4>Estudiante</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentDateBirth)
        </dd>
        <dt class = "col-sm-2">
            Género
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentGender)
        </dd>
        <dt class = "col-sm-2">
            Id de la Inidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUnit)
        </dd>
        <dt class = "col-sm-2">
            Colegio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdSchool)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdStudent" />
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Borrar
        </button>
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-3">
                &#8592; Volver atrás
            </a>
        </div>
    </form>
</div>
