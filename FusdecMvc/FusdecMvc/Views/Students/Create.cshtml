@model FusdecMvc.Models.Student

@{
    ViewData["Title"] = "Create";
}

<h1>Crear</h1>

<h4>Estudiante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StudentDateBirth" class="control-label">Fecha de nacimiento</label>
                <input asp-for="StudentDateBirth" class="form-control" type="date" />
                <span asp-validation-for="StudentDateBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StudentGender" class="control-label">Género</label>
                <select asp-for="StudentGender" class="form-control">
                    <option value="">Selecciona un género </option>
                    <option value="Masculino">Masculino</option>
                    <option value="Femenino">Femenino</option>
                    <option value="Otro">Otro</option>
                </select>
                <span asp-validation-for="StudentGender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUnit" class="control-label">Id de la Unidad</label>
                <input asp-for="IdUnit" class="form-control" />
                <span asp-validation-for="IdUnit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdSchool" class="control-label">Id del colegio</label>
                <input asp-for="IdSchool" class="form-control" />
                <span asp-validation-for="IdSchool" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="&#43; Crear" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
