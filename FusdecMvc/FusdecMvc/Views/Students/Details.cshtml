@model FusdecMvc.Models.Student

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Estudiantes</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Fecha de nacimiento
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentDateBirth)
        </dd>
        <dt class = "col-sm-2">
            Género
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.StudentGender)
        </dd>
        <dt class = "col-sm-2">
            Id de la Unidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUnit)
        </dd>
        <dt class = "col-sm-2">
            Id del Colegio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdSchool)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdStudent" class="btn btn-warning"><i class="bi bi-info-circle"></i> Editar</a>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>
