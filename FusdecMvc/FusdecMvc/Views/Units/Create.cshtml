@model FusdecMvc.Models.Unit

@{
    ViewData["Title"] = "Create Unit";
}

<h1>Create Unit</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UnitName" class="control-label"></label>
                <input asp-for="UnitName" class="form-control" />
                <span asp-validation-for="UnitName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="UnitState" /> @Html.DisplayNameFor(model => model.UnitState)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="UnitLocation" class="control-label"></label>
                <input asp-for="UnitLocation" class="form-control" />
                <span asp-validation-for="UnitLocation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdBrigade" class="control-label"></label>
                <select asp-for="IdBrigade" class="form-control" asp-items="ViewBag.IdBrigade"></select>
                <span asp-validation-for="IdBrigade" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Create Unit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}