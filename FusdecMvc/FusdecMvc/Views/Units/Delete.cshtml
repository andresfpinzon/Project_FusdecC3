@model FusdecMvc.Models.Unit

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<div class="card">
    <div class="card-header">
        <h3>¿Estás seguro de que quieres eliminar los datos?</h3>
    </div>
    <div class="card-body">
        <h4>Curso</h4>
        <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitName)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @(Model.UnitState ? "Activo" : "Inactivo")
        </dd>
        <dt class = "col-sm-2">
            Ubicación
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitLocation)
        </dd>
        <dt class = "col-sm-2">
            Brigada
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Brigade.BrigadeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdUnit" />
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Borrar
        </button>
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-3">
                &#8592; Volver atrás
            </a>
        </div>
    </form>
    </div>
</div>
