@model FusdecMvc.Models.Schedule

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>¿Estas seguro de que quieres eliminar los datos?</h3>
<div>
    <h4>Horario</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Título
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleTitle)
        </dd>
        <dt class = "col-sm-2">
            Hora de inicio
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleStartDate)
        </dd>
        <dt class = "col-sm-2">
            Hora de finalizacion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleEndDate)
        </dd>
        <dt class = "col-sm-2">
            Estado
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ScheduleStatus)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdSchedule" />
        <button type="submit" class="btn btn-danger">
            <i class="fa fa-trash"></i> Borrar
        </button>
        <div>
            <a asp-action="Index" class="btn btn-secondary mt-3">
                &#8592; Volver atrás
            </a>
        </div>
    </form>
</div>
