@model FusdecMvc.Models.Schedule

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Horario</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSchedule" />
            <div class="form-group">
                <label asp-for="ScheduleTitle" class="control-label">Título</label>
                <input asp-for="ScheduleTitle" class="form-control" />
                <span asp-validation-for="ScheduleTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleStartDate" class="control-label">Hora de inicio</label>
                <input asp-for="ScheduleStartDate" class="form-control" />
                <span asp-validation-for="ScheduleStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleEndDate" class="control-label">Hora de finalización</label>
                <input asp-for="ScheduleEndDate" class="form-control" />
                <span asp-validation-for="ScheduleEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ScheduleStatus" class="form-label">Estado</label>
                <select class="form-control" asp-for="ScheduleStatus" required>
                    <option value="true">Activo</option>
                    <option value="false">Inactivo</option>
                </select>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-3">
        &#8592; Volver atrás
    </a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
